{% extends 'base.html.twig' %}

{% block title %}Four en cours{% endblock %}

{% block body %}
    <h2 class="mb-3 text-center mt-5"><u>Ajouter un four du poste en cours</u></h2>
    <div class="form-group">
        {{ form_start(form) }}
        <div class="form-group" style="width: 90px">
            {{ form_row(form.four) }}
        </div>
        <div class="form-group" style="width: 180px">
            {{ form_row(form.statut) }}
        </div>
        <div class="form-group" style="width: 180px">
            {{ form_row(form.recuit) }}
        </div>
        <div class="form-group" style="width: 90px">
            {{ form_row(form.emplacement) }}
        </div>
        <div class="form-group" style="width: 800px">
            {{ form_row(form.commentaires) }}
        </div>
        {{ form_end(form) }}
    </div>

{% endblock %}
