{% extends 'base.html.twig' %}

{% block title %}Four à l'arrêt{% endblock %}

{% block body %}
    <h2 class="mb-3 text-center mt-5"><u>Ajouter un four à l'arrêt</u></h2>
    <div class="form-group">
        {{ form_start(form) }}
        <div class="form-group" style="width: 70px">
            {{ form_row(form.four) }}
        </div>
        <div class="form-group" style="width: 70px">
            {{ form_row(form.emplacement) }}
        </div>
        <div class="form-group" style="width: 800px">
            {{ form_row(form.commentaires) }}
        </div>
        {{ form_end(form) }}
    </div>

{% endblock %}