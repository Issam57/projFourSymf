{% extends 'base.html.twig' %}

{% block title %}Calcul recuit{% endblock %}

{% block body %}
<h1 class="text-center mt-3 mb-5"><u>Calcul du recuit</u></h1>

    <div class="container">
        {{ form_start(form) }}

        <div class="form-group" style="width: 250px">
            {{ form_row(dateRecuit) }}
        </div>
        <div class="form-group" style="width: 100px">
            {{ form_row(form.recuit) }}
        </div>

        {{ form_end(form) }}
    </div>




    <h2 class="text-center"><i class="far fa-calendar-alt"></i> <u>Date de fin du Recuit :</u> <br> <b>{{ res }}</b></h2>

{% endblock %}
